@model System.Data.DataTable

@{
    ViewData["Title"] = "List of Pens";
}

<div id="tb_pens">
    <div class="jumbotron">
        <h1 class="text-center">@ViewData["Title"]</h1>
    </div>
    <p>
        <a href="javascript:void(0);" onclick="CreateNew();">Create New</a>
    </p>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    Pen Title
                </th>
                <th>
                    Type
                </th>
                <th>
                    Price
                </th>
                <th>
                    <a href="javascript:void(0);" onclick="CreateNew();">Create New</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Rows.Count; i++)
            {
                <tr>
                    <td>
                        @Model.Rows[i]["Title"]
                    </td>
                    <td>
                        @Model.Rows[i]["Type"]
                    </td>
                    <td>
                        @Model.Rows[i]["Price"]
                    </td>
                    <td>
                        <a href="javascript:void(0)" onclick="Edit(@Model.Rows[i]["PenID"])">Edit</a> |
                        <a href="javascript:void(0)" onclick="Delete(@Model.Rows[i]["PenID"])" )>Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div id="AddOrEdit">

</div>