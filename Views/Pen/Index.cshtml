@model System.Data.DataTable

@{
    ViewData["Title"] = "List of Pens";
}

<div class="jumbotron">
    <h1 class="text-center">@ViewData["Title"]</h1>
</div>
<p>
    <a asp-action="AddOrEdit">Create New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Pen Title
            </th>
            <th>
                Type
            </th>
            <th>
                Price
            </th>
            <th>
                <a asp-action="AddOrEdit">Create New</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <tr>
                <td>
                    @Model.Rows[i]["Title"]
                </td>
                <td>
                    @Model.Rows[i]["Type"]
                </td>
                <td>
                    @Model.Rows[i]["Price"]
                </td>
                <td>
                    <a asp-action="AddOrEdit" asp-route-id="@Model.Rows[i]["PenID"]">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@Model.Rows[i]["PenID"]">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
